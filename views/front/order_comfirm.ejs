<%- include('./common/header') %>
<div class="confirmation-container">
    <% if (Order_data) { %>
        <div class="confirmation-card">
            <div class="icon-container">
                <svg xmlns="http://www.w3.org/2000/svg" class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 11l3 3L22 4"></path>
                    <path d="M9 21C4.03 21 0 16.97 0 12S4.03 3 9 3s9 4.03 9 9-4.03 9-9 9z"></path>
                </svg>
            </div>
            <h1 class="title">Order Confirmed!</h1>
            <p class="message">Thank you for your purchase. Your order has been placed successfully!</p>
            <div class="order-details">
                <p><strong>Order ID:</strong> #<%= Order_data._id %></p>
                <p><strong>Total Amount:</strong> â‚¹<%= Order_data.total_amount %></p>
                <p><strong>Estimated Delivery:</strong> <%= new Date(Order_data.createdAt).toLocaleDateString() %></p>
            </div>
            <a href="/" class="home-button">Back to Home</a>
        </div>
    <% } else { %>
        <div class="no-order-card">
            <h1 class="title">No Orders Found</h1>
            <p class="message">It seems like you haven't placed any orders yet.</p>
            <a href="/" class="home-button">Back to Home</a>
        </div>
    <% } %>
</div>
<%- include('./common/footer') %>
