<%- include('../common/header') %>
<div class="main-wrapper">
    <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    <!--login section start-->
    <section class="login-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-12 tt-login-img" data-background="front/assets/img/banner/login-banner.jpg"></div>
                <div class="col-lg-5 col-12 bg-white d-flex p-0 tt-login-col shadow">
                    <div class="tt-login-form-wrap p-3 p-md-6 p-lg-6 py-7 w-100">
                        <div class="mb-7">
                            <a href="index.html">
                                <img src="front/assets/img/logo.png" alt="logo" style="width:100px;height:75px;">
                            </a>
                        </div>
                        <h2 class="mb-4 h3">Hey there! <br>Welcome back <span class="text-secondary">Rdfpl.</span>
                        </h2>
                        <form id="loginForm">
                            <div class="row g-3">
                                <div class="col-sm-12">
                                    <div class="input-field">
                                        <label class="fw-bold text-dark fs-sm mb-1">Email</label>
                                        <input type="email" placeholder="Enter your email" class="theme-input" name="email" required>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="input-field check-password">
                                        <label class="fw-bold text-dark fs-sm mb-1">Password</label>
                                        <div class="check-password">
                                            <input type="password" placeholder="Password" class="theme-input" name="password" required>
                                            <span class="eye eye-icon">
                                                <i class="fa-solid fa-eye"></i>
                                            </span>
                                            <span class="eye eye-slash">
                                                <i class="fa-solid fa-eye-slash"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-4 mt-4">
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary w-100">Login</button>
                                </div>
                            </div>
                        </form>
                        <!-- <div class="d-flex align-items-center justify-content-between mt-4">
                            <div class="checkbox d-inline-flex align-items-center gap-2">
                                <div class="theme-checkbox flex-shrink-0">
                                    <input type="checkbox" id="save-password">
                                    <span class="checkbox-field">
           <i class="fa-solid fa-check"></i>
         </span>
                                </div>
                                <label class="save-password fs-sm">Remember for 30 days</label>
                            </div>
                            <a href="#" class="fs-sm">Forgot Password</a>
                        </div> -->
                       
                        <p class="mb-0 fs-xs mt-4">Don't have an Account? <a href="/register">Sign Up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--login section end-->

</div>
<%- include('../common/footer') %>