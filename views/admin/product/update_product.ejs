<%- include('../common/header') %>
    <div class="pc-container">
        <div class="pc-content">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-12">
                            <div class="page-header-title">
                                <h2 class="mb-0">Update Product</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="mt-0 header-title">Update Product Form</h4>
            <hr style="margin-bottom: 50px;background-color: darkgrey;">

            <div class="container mt-5">
                <form action="/auth/update_product_process/<%= update_data._id %>" method="post" enctype="multipart/form-data">
                    <div class="row mt-5">
                        <!-- Product Name -->
                        <div class="form-group col-md-4">
                            <label for="name">Product Name <span style="color:red;">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= update_data.name %>" required>
                        </div>
            
                        <!-- MRP -->
                        <div class="form-group col-md-4">
                            <label for="mrp">MRP <span style="color:red;">*</span></label>
                            <input type="number" class="form-control" id="mrp" name="mrp" value="<%= update_data.mrp %>" required>
                        </div>
            
                        <!-- Sell Price -->
                        <div class="form-group col-md-4">
                            <label for="sellPrice">Sell Price <span style="color:red;">*</span></label>
                            <input type="number" class="form-control" id="sellPrice" name="sellPrice" value="<%= update_data.sellPrice %>" required>
                        </div>
                    </div>
            
                    <!-- Product Information -->
                    <div class="row mt-5">
                        <!-- HSN Code -->
                        <div class="form-group col-md-4">
                            <label for="hsnCode">HSN Code <span style="color:red;">*</span></label>
                            <input type="text" class="form-control" id="hsnCode" name="hsnCode" value="<%= update_data.hsnCode %>" required>
                        </div>
            
                        <!-- Description -->
                        <div class="form-group col-md-8">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="4" required><%= update_data.description %></textarea>
                        </div>
                    </div>
            
                    <!-- Product Images -->
                    <div class="row mt-5">
                        <!-- Feature Image -->
                        <div class="form-group col-md-4">
                            <label for="featureImg">Feature Image <span style="color:red;">*</span></label>
                            <input type="file" class="form-control" id="featureImg" name="featureImg">
                            <img id="slide_img_path" height="100px" width="100px" src="/<%= update_data.featureImg %>" alt="Product Image" style="margin-right: 10px;">
                        </div>
            
                        <!-- Other Images -->
                        <div class="form-group col-md-4">
                            <label for="images">Images</label>
                            <input type="file" class="form-control" id="images" name="images" multiple>
                            <% update_data.images.forEach(function(image) { %>
                                <img id="slide_img_path" height="80px" width="80px" src="/<%= image %>" alt="Product Image" style="margin-right: 10px;">
                              <% }) %>
                        </div>
            
                        <!-- Options: Best Seller, Weekly Deals, Featured Product -->
                        <div class="form-group col-md-4">
                            <label>Options:</label><br>
                            <!-- Best Seller -->
                            <div>
                                <label for="bestSeller">Best Seller</label>
                                <input type="checkbox" name="bestSeller" id="bestSeller" <%= update_data.bestSeller ? 'checked' : '' %>> 
                            </div>
                            <!-- Weekly Deals -->
                            <div>
                                <label for="weeklyDeals">Weekly Deals</label>
                                <input type="checkbox" name="weeklyDeals" id="weeklyDeals" <%= update_data.weeklyDeals ? 'checked' : '' %>>
                            </div>
                            <!-- Featured Product -->
                            <div>
                                <label for="featuredProduct">Featured Product</label>
                                <input type="checkbox" name="featuredProduct" id="featuredProduct" <%= update_data.featuredProduct ? 'checked' : '' %>>
                            </div>
                        </div>
                    </div>
            
                    <!-- Submit Button -->
                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                    </div>
                </form>
            </div>
            
    
      





















    <%- include('../common/footer') %>

       