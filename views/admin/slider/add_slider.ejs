<%- include('../common/header') %>
<div class="pc-container">
          <div class="pc-content">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
              <div class="page-block">
                <div class="row align-items-center">                 
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h2 class="mb-0">ADD SLIDER</h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <h4 class="mt-0 header-title">ADD SLIDER Form</h4>
            <hr style="margin-bottom: 50px;background-color: darkgrey;">
            <div class="container mt-5">
                <form action="/auth/add_slider" method="post" >
                    <div class="row mt-5">
                        <div class="form-group col-md-12">
                            <label for="name">Name <span style="color:red;">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="form-group col-md-6">
                            <label for="nav_1">nav 1 <span style="color:red;">*</span></label>
                            <input type="text" class="form-control" id="nav_1" name="nav_1" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="nav_1_link">nav 1 link <span style="color:red;">*</span></label>
                            <input type="text" class="form-control" id="nav_1_link" name="nav_1_link" required>
                        </div>
                    </div>
            
                    <div class="row mt-5">
                        <div class="form-group col-md-6">
                            <label for="nav_2">nav 2 </label>
                            <input type="text" class="form-control" id="nav_2" name="nav_2">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="nav_2_link">nav 2 link</label>
                            <input type="text" class="form-control" id="nav_2_link" name="nav_2_link">
                        </div>
                    </div>
            
                    <div class="form-group mt-5">
                        <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                    </div>
                </form>
            </div>
            
          </div>
        </div>
        <%- include('../common/footer')%>       