<%- include('../common/header') %>
<div class="pc-container">
          <div class="pc-content">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
              <div class="page-block">
                <div class="row align-items-center">
                  <div class="col-md-12">
                
                  </div>
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h2 class="mb-0">UPDATE Banner</h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <h4 class="mt-0 header-title">UPDATE Banner Form</h4>
            <hr style="margin-bottom: 50px;background-color: darkgrey;">
            <div class="container mt-5">
                    <form action="/auth/update_banner_process/<%=update_data._id%>" method="post"enctype="multipart/form-data" >
                        <div class="row mt-5">
                            <div class="form-group col-md-6">
                                <label for="heading">Heading <span style="color:red;">*</span></label>
                                <input type="text" class="form-control" id="heading" name="heading"value="<%=update_data.heading%>" required>
                            </div>
                            <div class="form-group col-md-6">
                              <label for="image">Image <span style="color:red;">*</span></label>
                              <input type="file" class="form-control" id="image" name="image" >
                              <img id="slide_img_path" height="100" width="100" src="/<%= update_data.image %>">

                          </div>

                            </div>
                            <div class="row mt-5">
                              <div class="form-group col-md-6">
                                  <label for="Paragraph">Paragraph <span style="color:red;">*</span></label>
                                  <input type="text" class="form-control" id="Paragraph" name="Paragraph"value="<%=update_data.Paragraph%>">
                              </div>
                            
  
                              </div>
                        <div class="form-group mt-5">
                            <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                        </div>
                    </form>
                </div>
          </div>
        </div>
        <%- include('../common/footer')%>  