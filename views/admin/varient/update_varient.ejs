<%- include('../common/header') %>
<div class="pc-container">
          <div class="pc-content">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
              <div class="page-block">
                <div class="row align-items-center">
              
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h2 class="mb-0">Update Varient</h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <h4 class="mt-0 header-title">Update Varient Form</h4>
            <hr style="margin-bottom: 50px;background-color: darkgrey;">
            <div class="container mt-5">
              <form action="/auth/update_varient_process/<%=update_data._id%>" method="post">

                <div class="row mt-5">
                    <div class="form-group col-md-6">
                        <label for="type">Type <span style="color:red;">*</span></label>
                        <input type="text" class="form-control" id="type" name="type" value="<%=update_data.type%>" required>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="sku">Sku <span style="color:red;">*</span></label>
                      <input type="text" class="form-control" id="sku" name="sku"  value="<%=update_data.sku%>" required>
                  </div>
                </div>
                <div class="row mt-5">
                    <div class="form-group col-md-6">
                        <label for="sell_price">Sell Price <span style="color:red;">*</span></label>
                        <input type="text" class="form-control" id="sell_price" name="sell_price"  value="<%=update_data.sell_price%>" required>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="mrp">MRP <span style="color:red;">*</span></label>
                      <input type="text" class="form-control" id="mrp" name="mrp"  value="<%=update_data.mrp%>" required>
                  </div>
                </div>
                <div class="form-group mt-5">
                    <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                </div>
            </form>
                </div>
          </div>
        </div>
        <%- include('../common/footer')%>  