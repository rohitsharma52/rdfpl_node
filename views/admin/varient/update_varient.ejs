<%- include('../common/header') %>
<div class="pc-container">
          <div class="pc-content">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
              <div class="page-block">
                <div class="row align-items-center">
              
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h2 class="mb-0">UPDATE Varient</h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <h4 class="mt-0 header-title">UPDATE Varient Form</h4>
            <hr style="margin-bottom: 50px;background-color: darkgrey;">
            <div class="container mt-5">
              <form action="/auth/update_varient_process/<%=update_data._id%>" method="post" >
                <div class="row mt-5">
                 

                  <div class="form-group col-md-4">
                      <label for="unit">Unit <span style="color:red;">*</span></label>
                      <input type="text" class="form-control" id="unit" name="unit" value="<%=update_data.unit%>" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="pack_size">PackSize <span style="color:red;">*</span></label>
                    <input type="text" class="form-control" id="pack_size" name="pack_size" value="<%=update_data.pack_size%>" required>
                </div>
                <div class="form-group col-md-4">
                  <label for="stock">Stock <span style="color:red;">*</span></label>
                  <input type="text" class="form-control" id="stock" name="stock" value="<%=update_data.stock%>" required>
              </div>
              </div>
                
                <div class="row mt-5">
                    <div class="form-group col-md-4">
                        <label for="sell_price">Sell Price <span style="color:red;">*</span></label>
                        <input type="text" class="form-control" id="sell_price" name="sell_price" value="<%=update_data.sell_price%>" required>
                    </div>
                    <div class="form-group col-md-4">
                      <label for="mrp">MRP <span style="color:red;">*</span></label>
                      <input type="text" class="form-control" id="mrp" name="mrp" value="<%=update_data.mrp%>" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="sku">Sku <span style="color:red;">*</span></label>
                    <input type="text" class="form-control" id="sku" name="sku"  value="<%=update_data.sku%>" required>
                </div>
                <div class="form-group col-md-4">
                  <label for="hsnCode">HSN Code <span style="color:red;">*</span></label>
                  <input type="text" class="form-control" id="hsnCode" name="hsnCode" value="<%=update_data.hsnCode%>" required>
              </div>
                </div>
                <div class="form-group mt-5">
                    <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                </div>
            </form>
                </div>
          </div>
        </div>
        <%- include('../common/footer')%>  