<%- include('../common/header') %>
<div class="pc-container">
          <div class="pc-content">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
              <div class="page-block">
                <div class="row align-items-center">
              
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h2 class="mb-0">ADD Varient</h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <h4 class="mt-0 header-title">ADD Varient Form</h4>
            <hr style="margin-bottom: 50px;background-color: darkgrey;">
            <div class="container mt-5">
              <form action="/auth/add_varient_process" method="post"  >
                <div class="row mt-5">
                  <input type="hidden"name="product_id" value="<%=product_id%>">

                  <div class="form-group col-md-4">
                      <label for="unit">Unit <span style="color:red;">*</span></label>
                      <input type="text" class="form-control" id="unit" name="unit" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="pack_size">PackSize <span style="color:red;">*</span></label>
                    <input type="text" class="form-control" id="pack_size" name="pack_size" required>
                </div>
                <div class="form-group col-md-4">
                  <label for="stock">Stock <span style="color:red;">*</span></label>
                  <input type="text" class="form-control" id="stock" name="stock" required>
              </div>
              </div>
                
                <div class="row mt-5">
                    <div class="form-group col-md-4">
                        <label for="sell_price">Sell Price <span style="color:red;">*</span></label>
                        <input type="text" class="form-control" id="sell_price" name="sell_price" required>
                    </div>
                    <div class="form-group col-md-4">
                      <label for="mrp">MRP <span style="color:red;">*</span></label>
                      <input type="text" class="form-control" id="mrp" name="mrp" required>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="sku">Sku <span style="color:red;">*</span></label>
                    <input type="text" class="form-control" id="sku" name="sku" required>
                </div>
                </div>
                <div class="form-group mt-5">
                    <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                </div>
            </form>
                </div>
          </div>
        </div>
        <%- include('../common/footer')%>  